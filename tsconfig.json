{
  "compilerOptions": {
    "target": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "module": "CommonJS",
    "outDir": "./lib",
    "types": ["node", "playwright", "@playwright/test"],
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true
  },
  "include": [
    "src",
    "package.json",
    "playwright.config.ts"
  ]
}
